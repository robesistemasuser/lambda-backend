{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "aws-lambda"]  // Incluye los tipos necesarios
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

